<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/play_button</item>
        <item name="android:backgroundTint">@null</item>
        <!-- Add any other properties you want to customize -->
    </style>
    <style name="OverallUI">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/highscore_bar</item>
    </style>
    <style name="textStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="highScoreStyle">
        <item name="android:layout_width">236dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:text">TextView</item>
         <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_100</item>
        <item name="android:textSize">34sp</item>
    </style>
</resources>